<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="true">
        <shape
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
            <gradient
                android:startColor="@color/dark_orange"
                android:endColor="@color/soft_orange"
                android:angle="135" />
            <corners
                android:radius="40dp"/>
            <size
                android:width="@dimen/switch_width"
                android:height="@dimen/switch_heigth" />
            <stroke
                android:width="4dp"
                android:color="#0000ffff"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
            <gradient
                android:startColor="@color/dark_orange"
                android:endColor="@color/soft_orange"
                android:angle="135" />
            <corners
                android:radius="40dp"/>
            <size
                android:width="@dimen/switch_width"
                android:height="@dimen/switch_heigth" />
            <stroke
                android:width="4dp"
                android:color="#0000ffff"/>
        </shape>
    </item>
</selector>