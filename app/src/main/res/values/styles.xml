<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:activatedBackgroundIndicator">@color/soft_orange</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/soft_orange</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:spinnerStyle">@style/ThemeSpinner</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Autocomplete">
        <item name="colorControlNormal">@color/grayIconTint</item>
        <item name="colorControlActivated">@color/soft_orange</item>
        <item name="android:textColorHint">@color/grayIconTint</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlHighlight">@color/soft_orange</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeSpinner">
        <!-- Color when pressed -->
        <item name="android:colorAccent">@color/soft_orange</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="android:colorControlNormal">@color/soft_orange</item>
        <item name="colorAccent">@color/soft_orange</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">@color/soft_orange</item>
        <item name="android:colorActivatedHighlight">@color/soft_orange</item>
        <item name="android:color">@color/soft_orange</item>
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ClickableImageView">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
</resources>
