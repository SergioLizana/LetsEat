<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="ikigaiworks.letseat.ui.view.activities.MainActivity">

    <!-- FragmentLogin progress -->
    <ProgressBar
        android:id="@+id/registro_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/email_registr_form"
        app:layout_constraintHorizontal_bias="0.433" />


        <LinearLayout
            android:id="@+id/email_registr_form"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent">

            <android.support.design.widget.TextInputLayout
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:textColorHint="@color/grayIconTint">

                <AutoCompleteTextView
                    android:id="@+id/email_registro"
                    android:layout_width="344dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_email"
                    android:textColorHint="@color/grayIconTint"
                    android:textColorHighlight="@color/soft_orange"
                    android:shadowColor="@color/soft_orange"
                    android:textColor="@android:color/white"
                    android:theme="@style/Autocomplete"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:textColorHint="@color/grayIconTint">

                <EditText
                    android:id="@+id/password_registro"
                    android:layout_width="344dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_password"
                    android:imeActionId="@+id/fragmentLogin"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:textColorHint="@color/grayIconTint"
                    android:textColorHighlight="@color/soft_orange"
                    android:shadowColor="@color/soft_orange"
                    android:textColor="@android:color/white"
                    android:theme="@style/Autocomplete"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:textColorHint="@color/grayIconTint">

                <EditText
                    android:id="@+id/password2_registro"
                    android:layout_width="344dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_password"
                    android:imeActionId="@+id/fragmentLogin"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:textColorHint="@color/grayIconTint"
                    android:textColorHighlight="@color/soft_orange"
                    android:shadowColor="@color/soft_orange"
                    android:textColor="@android:color/white"
                    android:theme="@style/Autocomplete"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

    <Button
        android:id="@+id/email_registr_button"
        style="?android:textAppearanceSmall"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="@string/action_sign_in"
        android:background="@drawable/gradient"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:layout_marginTop="79dp"
        app:layout_constraintTop_toBottomOf="@+id/email_registr_form"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
